{
    "name": "constlab/larapress",
    "description": "",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Ivan Kalinichenko",
            "email": "kalinichenko@constlab.ru"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4",
        "spatie/eloquent-sortable": "^3.7",
        "spatie/laravel-medialibrary": "^7.18",
        "spatie/laravel-model-status": "^1.9",
        "spatie/laravel-sluggable": "^2.3"
    },
    "require-dev": {
        "orchestra/testbench": "^4.0",
        "phpunit/phpunit": "^8.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "LaraPress\\": "src/"
        },
        "classmap": [
            "database/seeds",
            "database/factories"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate"
        ],
        "test": "phpunit --colors=always --coverage-text"
    }
}
